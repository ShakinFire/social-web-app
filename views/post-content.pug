if condition
    div.all-posts.container-style
        div.post-header
            a(href="profile/" + allUsers.username)
                img(src="img/default_profile.jpg")
            p
                a(href="#")| #{allUsers.username}
                br
                | posted #{allPosts.date}
        div.post-content
            p.break-fix
                | #{allPosts.post_content}
        div.icons-content
            form(action="/like" method="post")#comment-like
                div.row
                    button.like-btn.col-lg-6
                        div.text-center.btn-wrapper
                            p
                                i(class="fa fa-thumbs-o-up" aria-hidden="true")
                                | Like(#{allPosts.total_likes})
                    button.comment-btn.col-lg-6
                        div.text-center.btn-wrapper
                            p
                                i(class="fa fa-comment-o")
                                | Comment(0)
else
    each post, index in allPosts
        div.all-posts.container-style
            div.post-header
                a(href="profile/" + allUsers[index].username)
                    img(src="img/default_profile.jpg")
                p
                    a(href="#")| #{allUsers[index].username}
                    br
                    | posted #{post.date}
            div.post-content
                p.break-fix
                    | #{post.post_content}
            div.icons-content
                form(action="/like" method="post")#comment-like
                    div.row
                        button.like-btn.col-lg-6
                            div.text-center.btn-wrapper
                                p
                                    i(class="fa fa-thumbs-o-up" aria-hidden="true")
                                    | Like(#{post.total_likes})
                        button.comment-btn.col-lg-6
                            div.text-center.btn-wrapper
                                p
                                    i(class="fa fa-comment-o")
                                    | Comment(0)