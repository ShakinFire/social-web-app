script(src="javascript/profile-images.js")

// - Form for submitting new profile or cover picture.
form#upload-form.upload-form(action="/profile/upload", method="POST", enctype="multipart/form-data")
    input#upload-field.upload-field(accept="image/*", type="file", name="image")
    input#which-image.which-image(type="text", name="which-image")

// - The rest of the settings page.
div.col-sm-offset-1.col-sm-10
    form.form-horizontal(action="/profile/update", method="POST")
        div.form-group
            label(for='first-name') First Name
            input#first-name.form-control(type='text', placeholder='First Name')
        div.form-group
            label(for='last-name') Last Name
            input#last-name.form-control(type='text', placeholder='Last Name')
        div.form-group
            label(for='description') Description
            textarea#description.form-control(rows='3')